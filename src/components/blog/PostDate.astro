---
import type { Post } from "../../lib/content.type";
import {formatDateForHuman, formatDateForBrowser} from "../../utils/date.util";

type Props = {
    post: Post,
    className: string,
};

const { post, className } = Astro.props;
---

<time class={className} datetime={formatDateForBrowser(post.publishedAt)}>
    {formatDateForHuman(post.publishedAt)}
</time>

