                    <ellipse cy="41" rx="91" ry="84"/>
                    <rect rx="22" height="182" width="182" y="20" x="-91"/>
                  </g>
                </g>
                <g stroke="#FFF" stroke-width="7.2" fill="#FFF">
                  <path d="m-95 44.5h190"/><circle cx="-42" r="4"/><circle cx="42" r="4"/>
                </g>
              </svg>
              <span>Installer sur Android</span>
            </a>
            <a target="_blank" href="https://apps.apple.com/fr/app/carte-du-patrimoine/id6502663823" class="relative animate self-stretch space-x-2 items-center px-4 py-2 rounded flex justify-center items-center border border-[#000000] text-[#000000] transition-transform duration-250 hover:scale-110">
