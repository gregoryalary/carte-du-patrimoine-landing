---
const { title, description, schema, image } = Astro.props;
---

<title>{title} | Carte du patrimoine</title>
<meta name="description" content={description}/>
<link rel="canonical" href={Astro.url} />
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@CartePatrimoine" />
<meta name="twitter:domain" content="www.carte-du-patrimoine.com">
<meta name="twitter:title" content={title} />
<meta property="og:title" content={title} />
<meta name="twitter:description" content={description} />
<meta property="og:description" content={description} />
<meta name="twitter:url" content={Astro.url} />
<meta property="og:url" content={Astro.url} />
<meta name="twitter:image" content={image} />
<meta property="og:image" content={image} />
{schema && (<script is:inline type="application/ld+json" set:html={JSON.stringify(schema)} />)}